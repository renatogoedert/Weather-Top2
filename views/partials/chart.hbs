<div class="ui segment" id="chart"></div>
{{#each readings}}
  {{#if @last}}
    <script>
      const data = {
        labels: [
          {{#each trendLabels}}
            "{{this}}",
          {{/each}}
        ],
        datasets: [
          {
            name: "Temperature", type: "line",
            values: [
              {{#each tempTrend}}
                {{this}},
              {{/each}}
            ]
          }
        ]
      }

      const chart = new frappe.Chart("#chart", {
        title: "Temperature Trend",
        data: data,
        type: 'line',
        height: 250,
      })
    </script>
  {{/if}}
{{/each}}
