<form
  class="ui stacked segment form"
  action="/station/{{station.id}}/addreading"
  method="POST"
>
  <div class="five fields">

    <div class="field">
      <label>Code</label>
      <input placeholder="Code" type="text" name="code" />
    </div>

    <div class="field">
      <label>Temperature</label>
      <input placeholder="Temperature" type="text" name="temperature" />
    </div>

    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Wind Speed" type="text" name="windSpeed" />
    </div>

    <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="text" name="pressure" />
    </div>

    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Wind Direction" type="text" name="windDirection" />
    </div>

  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>