<table class="ui table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Pressure</th>
      <th>Wind Direction</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{date}}
        </td>
        <td>
          {{code}}
        </td>
        <td>
          {{temperature}}
        </td>
        <td>
          {{windSpeed}}
        </td>
        <td>
          {{pressure}}
        </td>
        <td>
          {{windDirection}}
        </td>
        
        <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui tiny red button">Delete Reading</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>