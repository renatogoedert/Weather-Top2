{{> menu}}

<section class="ui stacked segment form">
  <table class="ui fixed table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> {{user.firstName}}</td>
        <td> {{user.lastName}}</td>
        <td> {{user.email}}</td>
      </tr>
    </tbody>
  </table> 
  <form class="ui stacked segment form" action="/updateuser" method="POST">
    <div class="three fields">
      <div class="field">
        <label>First Name</label>
        <input placeholder="New First Name" type="text" name="firstName">
      </div>              
      <div class="field">
        <label>Last Name</label>
        <input placeholder="New Last Name" type="text" name="lastName">
      </div>                
      <div class="field">
        <label>Password</label>
        <input placeholder="New Password" type="password" name="password">
      </div>
    </div>
    <button class="ui blue submit button">Change</button>
  </form>       
</section>